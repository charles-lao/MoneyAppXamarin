<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<!-- Section One -->
	<RelativeLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_height="0dp"
		android:layout_weight="0.2">

		<RelativeLayout
			android:background="@drawable/roundededges"
			android:padding="10dp"
			android:elevation="4dp"
			android:layout_centerInParent="true"
			android:layout_width="match_parent"
			android:layout_height="90dp">

			<de.hdodenhof.circleimageview.CircleImageView
				android:layout_centerVertical="true"
				android:id="@+id/profileImage"
				android:src="@drawable/personal1"
				android:layout_width="65dp"
				android:layout_height="65dp"/>
			
			<TextView
				android:layout_marginLeft="15dp"
				android:id="@+id/nameTextView"
				android:text="Uchenna Nnodim"
				android:textSize="16sp"
				android:textStyle="bold"
				android:layout_toRightOf="@+id/profileImage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView
				android:layout_marginLeft="15dp"
				android:id="@+id/placeTextView"
				android:layout_toRightOf="@+id/profileImage"
				android:layout_below="@+id/nameTextView"
				android:text="New Jersey, USA"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<ImageView
				android:layout_marginRight="5dp"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:src="@drawable/phonecall"
				android:layout_width="35dp"
				android:layout_height="35dp"/>
			
			<LinearLayout
				android:layout_marginLeft="15dp"
				android:layout_marginTop="5dp"
				android:layout_toRightOf="@+id/profileImage"
				android:layout_below="@+id/placeTextView"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
				<ImageView
					android:tint="@color/colorOrange"
					android:src="@drawable/star"
					android:layout_width="15dp"
					android:layout_height="15dp"/>
				 
				<ImageView
					android:tint="@color/colorOrange"
					android:layout_marginLeft="5dp"
					android:src="@drawable/star"
					android:layout_width="15dp"
					android:layout_height="15dp"/>
				
				<ImageView
					android:tint="@color/colorOrange"
					android:layout_marginLeft="5dp"
					android:src="@drawable/star"
					android:layout_width="15dp"
					android:layout_height="15dp"/>
	
				<ImageView
					android:tint="@color/colorOrange"
					android:layout_marginLeft="5dp"
					android:src="@drawable/star"
					android:layout_width="15dp"
					android:layout_height="15dp"/>

				<ImageView
					android:layout_marginLeft="5dp"
					android:src="@drawable/star"
					android:layout_width="15dp"
					android:layout_height="15dp"/>
				
			
			</LinearLayout>
			
		</RelativeLayout>
	</RelativeLayout>

	<!-- Section Two -->
	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.22">
		
		<TextView
			android:id="@+id/balanceTextView"
			android:text="$32,405.00"
			android:textSize="32sp"
			android:textStyle="bold"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		
		<TextView
			android:layout_above="@+id/balanceTextView"
			android:text="Account Balance"
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	</RelativeLayout>

	<!-- Section Three -->
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.5">
		
		<RelativeLayout
			android:background="@drawable/roundededges"
			android:padding="10dp"
			android:layout_width="match_parent"
			android:layout_height="60dp">
			
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/friendImageView"
				android:layout_centerVertical="true"
				android:src="@drawable/personal1"
				android:layout_width="35dp"
				android:layout_height="35dp"/>
			
			<TextView
				android:id="@+id/descriptionTextView"
				android:layout_toRightOf="@+id/friendImageView"
				android:layout_marginLeft="10dp"
				android:textStyle="bold"
				android:text="Transfer to Julia"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView
				android:id="@+id/transferDateTextView"
				android:layout_marginLeft="10dp"
				android:layout_below="@+id/descriptionTextView"
				android:layout_toRightOf="@+id/friendImageView"
				android:text="22-May-2001"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView
				android:id="@+id/amountTextView"
				android:layout_alignParentRight="true"
				android:textColor="@color/colorRed"
				android:text="$7200.00"
				android:textSize="13sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
			<TextView
				android:text="View"
				android:textSize="12sp"
				android:layout_marginTop="2dp"
				android:layout_below="@+id/amountTextView"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>


		<RelativeLayout
			android:background="@drawable/roundededges"
			android:padding="10dp"
			android:layout_marginTop="10dp"
			android:layout_width="match_parent"
			android:layout_height="60dp">

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/friendImageView"
				android:layout_centerVertical="true"
				android:src="@drawable/profile1"
				android:layout_width="35dp"
				android:layout_height="35dp"/>

			<TextView
				android:id="@+id/descriptionTextView"
				android:layout_toRightOf="@+id/friendImageView"
				android:layout_marginLeft="10dp"
				android:textStyle="bold"
				android:text="Deposit from Kaycee"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/transferDateTextView"
				android:layout_marginLeft="10dp"
				android:layout_below="@+id/descriptionTextView"
				android:layout_toRightOf="@+id/friendImageView"
				android:text="24-June-2001"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/amountTextView"
				android:layout_alignParentRight="true"
				android:textColor="@color/colorGreen"
				android:text="$4100.00"
				android:textSize="13sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:text="View"
				android:textSize="12sp"
				android:layout_marginTop="2dp"
				android:layout_below="@+id/amountTextView"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>


		<RelativeLayout
			android:background="@drawable/roundededges"
			android:padding="10dp"
			android:layout_marginTop="10dp"
			android:layout_width="match_parent"
			android:layout_height="60dp">

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/friendImageView"
				android:layout_centerVertical="true"
				android:src="@drawable/personal"
				android:layout_width="35dp"
				android:layout_height="35dp"/>

			<TextView
				android:id="@+id/descriptionTextView"
				android:layout_toRightOf="@+id/friendImageView"
				android:layout_marginLeft="10dp"
				android:textStyle="bold"
				android:text="Deposit from Peter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/transferDateTextView"
				android:layout_marginLeft="10dp"
				android:layout_below="@+id/descriptionTextView"
				android:layout_toRightOf="@+id/friendImageView"
				android:text="27-June-2001"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:id="@+id/amountTextView"
				android:layout_alignParentRight="true"
				android:textColor="@color/colorGreen"
				android:text="$7200.00"
				android:textSize="13sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:text="View"
				android:textSize="12sp"
				android:layout_marginTop="2dp"
				android:layout_below="@+id/amountTextView"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>
		
		
	</LinearLayout>
</LinearLayout>